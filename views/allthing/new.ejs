<% layout("allthing/boiler/boiler.ejs") %>
<body>
    <h1 class="px-5 offset-2">create a new list</h1>
 <div class="row">
  <div class="col-8 offset-2">
    <form class="px-5" action="/allthing/new" method="post"  >
      <div>  <label class="form-lable mb-2" for="">titel</label>      <input type="text" class="form-control" name="listing[title]" aria-placeholder="titel" required  > <br></div>
      <div>  <label class="form-lable mb-2"for="">image url</label>    <input type="url" class="form-control"  name="listing[image]" aria-placeholder="image" required  ><br></div>
      <!-- --------------- -->
      <label for="tourist-places">Category</label>
      <select id="tourist-places" class="form-select form-select-sm" required  name="listing[category]">
          <option value="" disabled selected>Select one...</option>
          <option value="Temple">Temple</option>
          <option value="Beach">Beach</option>
          <option value="Hill station">Hill Station</option>
          <option value="Water Park">Water Park</option>
          <option value="Fort">Fort</option>
          <option value="National Park">National Park</option>
          <option value="Historical Site">Historical Site</option>
          <option value="Museum">Museum</option>
          <option value="Wildlife Sanctuary">Wildlife Sanctuary</option>
          <option value="Adventure Park">Adventure Park</option>
          <option value="Cultural Village">Cultural Village</option>
          <option value="Scenic Viewpoint">Scenic Viewpoint</option>
          <option value="Amusement Park">Amusement Park</option>
          <option value="Botanical Garden">Botanical Garden</option>
          <option value="Lakeside Resort">Lakeside Resort</option>
          <option value="Cave">Cave</option>
          <option value="Stadium">Stadium</option>
          <option value="Aquarium">Aquarium</option>
          <option value="Spa and Wellness Center">Spa and Wellness Center</option>
          <option value="Mountain Range">Mountain Range</option>
          
          <option value="Street Market">Street Market</option>
          <option value="Art Gallery">Art Gallery</option>
          <option value="Theme Park">Theme Park</option>
          <option value="Nature Reserve">Nature Reserve</option>
          <option value="Skyscraper Observation Deck">Skyscraper Observation Deck</option>
          <option value="Monument">Monument</option>
          <option value="Hot Springs">Hot Springs</option>
          <option value="Zoological Park">Zoological Park</option>
          
      </select>
      <!-- --------------- -->
      <div>  <label class="form-lable mb-2" for="">description</label> <textarea type="text" class="form-control" name="listing[description]" aria-placeholder="description" required ></textarea><br></div>
      <div>  <label class="form-lable mb-2" for="">Ticket price</label>       <input type="number" class="form-control" name="listing[ticketPrice]" aria-placeholder="price"  required><br></div>
     
    <div>  <label class="form-lable mb-2"for="">  location</label>     
    <input type="text" id="search" class="form-control" name="listing[location]"  placeholder="Start typing a place...">
    <ul id="suggestions"></ul>
    <input type="hidden" id="longitude" name="listing[longitude]" value="" />
    <input type="hidden" id="latitude" name="listing[latitude]" value="" />

      <div>  <label class="form-lable mb-2"for="">State</label>       <input type="text" class="form-control" name="listing[state]" aria-placeholder="country" required ><br></div>
           <button type="submit" class="btn btn-danger  btn-lg pr-5 px-5 my-2">ok</button>
       </form> 
  </div>
 </div> 


 <script src="/js/forminput.js"></script>

 <script>document.querySelector(".btn-outline-success").addEventListener("click",(e)=>{
    

  document.querySelector(".userdetail").classList.toggle("display-none");
})</script>
</body>
